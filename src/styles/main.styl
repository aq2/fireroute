@import 'moar/*'

link(radius=5px)
  border-radius radius
  transition .25s all ease
  border 2px solid transparent
  &:hover
    color $gb
    cursor pointer
    animation throb linear 1s infinite
    background tint($buttonColour, 10)

#page
  padding 1.5rem 0 0 5rem

h1
  margin 0
  margin-bottom 0.5rem
  color #111
  font-size 2rem
  font-family Merriweather

p
  color #111
  margin-bottom 1.5rem

a
  color $g9
  outline none
  link(0.5rem)
  min-width 140px
  background blue
  font-size 1.25rem
  text-align center
  display inline-block
  padding 0.75rem
  min-width 200px
  text-decoration-line none
  &:hover
    cursor pointer
    background lightblue

button
  font-size 1.25rem
  color $g8
  background blue
  padding 0.75rem
  border-radius 0.5rem
  border 0
  // border 2px solid lime
  transition 0.5s all ease
  // animation throb linear 2s infinite
  &:hover
    cursor pointer
    background lightblue

#text 
  background $g7
  padding 1rem
  width 600px

.h 
  width 50px
  display inline-block

.v 
  height 30px

pre 
  font-size 1.5rem

.capital
  color white
  font-size 2rem
  background $g5
  min-width 400px
  margin-bottom 1rem
  padding 1rem

.capital:nth-of-type(odd)
  background $g7

.init
  font-size 1rem

.plainlabel
  position relative
  margin 0
  min-width 200px

.lay
  margin-left 2rem

.plainlabel:hover input ~ .checkmark
  background-color #47c
  opacity 0.5
  transition 0.25s all
  cursor pointer

